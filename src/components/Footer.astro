---
const currentYear = new Date().getFullYear();

const services = [
  { label: 'Cloud Computing', href: '#servicios' },
  { label: 'Desarrollo de Software', href: '#servicios' },
  { label: 'Outsourcing TI', href: '#servicios' },
  { label: 'Consultoría Tecnológica', href: '#contacto' },
];

const company = [
  { label: 'Sobre Nosotros', href: '#nosotros' },
  { label: 'Industrias', href: '#industrias' },
  { label: 'Contáctanos', href: '#contacto' },
  { label: 'Trabaja con nosotros', href: 'mailto:contacto@4clover.cl?subject=Quiero trabajar en 4Clover' },
];

const legal = [
  { label: 'Política de Privacidad', href: '#' },
  { label: 'Términos de Servicio', href: '#' },
];
---

<footer class="bg-gray-900 border-t border-gray-800">

  <!-- Main footer content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-10">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10 mb-12">

      <!-- Brand column -->
      <div class="lg:col-span-1">
        <a href="#inicio" class="flex items-center mb-5">
          <img
            alt="4Clover Technology Logo"
            class="h-9 w-auto"
            src="/logos/logo-light.png"
            width="144"
            height="36"
          />
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          Tecnología estratégica para el crecimiento sostenible de las PYMEs en Chile y Latinoamérica.
        </p>

        <!-- Social links -->
        <div class="flex space-x-3">
          <a
            href="https://www.linkedin.com/company/4clover"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
            class="w-9 h-9 rounded-lg bg-gray-800 hover:bg-primary flex items-center justify-center text-gray-400 hover:text-white transition-all duration-200"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path clip-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" fill-rule="evenodd"></path>
            </svg>
          </a>
          <a
            href="https://www.instagram.com/4clovertech"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="w-9 h-9 rounded-lg bg-gray-800 hover:bg-primary flex items-center justify-center text-gray-400 hover:text-white transition-all duration-200"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path clip-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 014.185 3.362c.636-.247 1.363-.416 2.427-.465C7.673 2.013 8.028 2 10.457 2h1.858zm-.023 1.802h-1.79c-2.41 0-2.747.01-3.713.057-.896.041-1.383.192-1.707.318a2.86 2.86 0 00-1.064.693 2.86 2.86 0 00-.693 1.064c-.126.324-.277.811-.318 1.707-.047.966-.057 1.303-.057 3.713v1.79c0 2.41.01 2.747.057 3.713.041.896.192 1.383.318 1.707.17.44.372.75.693 1.064a2.86 2.86 0 001.064.693c.324.126.811.277 1.707.318.966.047 1.303.057 3.713.057h1.79c2.41 0 2.747-.01 3.713-.057.896-.041 1.383-.192 1.707-.318a2.86 2.86 0 001.064-.693 2.86 2.86 0 00.693-1.064c.126-.324.277-.811.318-1.707.047-.966.057-1.303.057-3.713v-1.79c0-2.41-.01-2.747-.057-3.713-.041-.896-.192-1.383-.318-1.707a2.86 2.86 0 00-.693-1.064 2.86 2.86 0 00-1.064-.693c-.324-.126-.811-.277-1.707-.318-.966-.047-1.303-.057-3.713-.057zm.023 3.065a5.133 5.133 0 110 10.266 5.133 5.133 0 010-10.266zm0 1.802a3.331 3.331 0 100 6.662 3.331 3.331 0 000-6.662zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" fill-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Servicios -->
      <div>
        <h3 class="text-white font-semibold mb-5 text-sm uppercase tracking-widest">Servicios</h3>
        <ul class="space-y-3">
          {services.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-400 hover:text-primary text-sm transition-colors duration-200 hover:pl-1 inline-block"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Empresa -->
      <div>
        <h3 class="text-white font-semibold mb-5 text-sm uppercase tracking-widest">Empresa</h3>
        <ul class="space-y-3">
          {company.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-400 hover:text-primary text-sm transition-colors duration-200 hover:pl-1 inline-block"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal + Contact -->
      <div>
        <h3 class="text-white font-semibold mb-5 text-sm uppercase tracking-widest">Legal</h3>
        <ul class="space-y-3 mb-8">
          {legal.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-400 hover:text-primary text-sm transition-colors duration-200 hover:pl-1 inline-block"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>

        <div class="border-t border-gray-800 pt-6">
          <p class="text-gray-500 text-xs mb-2 flex items-center gap-2">
            <span class="material-icons text-sm">location_on</span>
            Santiago, Chile
          </p>
          <a href="mailto:contacto@4clover.cl" class="text-gray-500 text-xs hover:text-primary transition-colors flex items-center gap-2">
            <span class="material-icons text-sm">email</span>
            contacto@4clover.cl
          </a>
        </div>
      </div>

    </div>

    <!-- Bottom bar -->
    <div class="border-t border-gray-800 pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-gray-500 text-sm">
        © {currentYear} 4Clover Technology SpA. Todos los derechos reservados.
      </p>
      <p class="text-gray-600 text-xs">
        Hecho con <span class="text-primary">♥</span> en Chile
      </p>
    </div>
  </div>

</footer>
