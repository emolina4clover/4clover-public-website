---
const services = [
  {
    id: 'cloud',
    icon: 'cloud_queue',
    title: 'Cloud Computing',
    description: 'Moderniza tu infraestructura con soluciones en la nube seguras y escalables. Somos expertos en AWS, Azure y Google Cloud para optimizar costos y rendimiento.',
    features: [
      'Migración a la nube sin interrupciones',
      'Arquitectura Serverless y Microservicios',
      'Optimización de costos cloud (FinOps)',
    ],
    imageAlt: 'Cloud Computing en Chile',
    imageSrc: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=800&q=80',
    reverse: false,
  },
  {
    id: 'software',
    icon: 'code',
    title: 'Desarrollo de Software',
    description: 'Transformamos tus ideas en productos digitales robustos. Desde aplicaciones web y móviles hasta sistemas complejos de gestión empresarial.',
    features: [
      'Desarrollo Full Stack a medida',
      'Modernización de aplicaciones legacy',
      'Metodologías Ágiles (Scrum/Kanban)',
    ],
    imageAlt: 'Desarrollo de Software a medida',
    imageSrc: 'https://images.unsplash.com/photo-1555066931-4365d14bab8c?w=800&q=80',
    reverse: true,
  },
  {
    id: 'outsourcing',
    icon: 'people_outline',
    title: 'Outsourcing TI',
    description: 'Amplía tu capacidad técnica de inmediato con nuestros servicios de Staff Augmentation y Equipos Dedicados. Talento chileno de alto nivel.',
    features: [
      'Staff Augmentation flexible',
      'Equipos de Desarrollo Dedicados',
      'Reclutamiento TI especializado',
    ],
    imageAlt: 'Outsourcing TI y Staff Augmentation',
    imageSrc: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=800&q=80',
    reverse: false,
  },
];
---

<section
  class="py-24 bg-background-light dark:bg-background-dark transition-colors duration-300"
  id="servicios"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div class="text-center mb-20 animate-on-scroll">
      <h2 class="text-base text-primary dark:text-emerald-400 font-semibold tracking-widest uppercase mb-3">
        Nuestros Servicios
      </h2>
      <p class="text-3xl sm:text-4xl font-display font-bold text-text-light dark:text-white leading-tight text-balance">
        Soluciones integrales para la era digital
      </p>
    </div>

    <!-- Services list -->
    <div class="space-y-32">
      {services.map((service, i) => (
        <div class={`lg:grid lg:grid-cols-2 lg:gap-16 items-center ${service.reverse ? '' : ''}`}>

          <!-- Image -->
          <div class={`mb-10 lg:mb-0 animate-on-scroll ${service.reverse ? 'from-right lg:order-2' : 'from-left'}`}>
            <div class="rounded-2xl overflow-hidden shadow-2xl bg-surface-dark border border-gray-800 relative group aspect-[16/10]">
              <div class="absolute inset-0 bg-primary/20 mix-blend-overlay z-10 transition-opacity duration-300 group-hover:opacity-0"></div>
              <img
                alt={service.imageAlt}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                src={service.imageSrc}
                loading="lazy"
                decoding="async"
              />
              <!-- Service badge -->
              <div class="absolute top-4 left-4 z-20 flex items-center gap-2 bg-black/60 backdrop-blur-sm px-3 py-1.5 rounded-full">
                <span class="material-icons text-primary text-base">{service.icon}</span>
                <span class="text-white text-xs font-medium">{service.title}</span>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class={`animate-on-scroll ${service.reverse ? 'from-left lg:order-1' : 'from-right'}`}>
            <div class="flex items-center mb-5">
              <span class="p-2.5 rounded-xl bg-primary/10 text-primary mr-4">
                <span class="material-icons text-2xl">{service.icon}</span>
              </span>
              <h3 class="text-2xl lg:text-3xl font-display font-bold text-text-light dark:text-white">
                {service.title}
              </h3>
            </div>

            <p class="text-lg text-text-muted-light dark:text-gray-400 mb-7 leading-relaxed">
              {service.description}
            </p>

            <ul class="space-y-3 mb-8">
              {service.features.map((feature) => (
                <li class="flex items-start">
                  <span class="material-icons text-primary mr-3 text-lg mt-0.5 flex-shrink-0">check_circle</span>
                  <span class="text-text-muted-light dark:text-gray-300">{feature}</span>
                </li>
              ))}
            </ul>

            <a
              href="#contacto"
              class="inline-flex items-center text-primary dark:text-emerald-400 font-semibold hover:gap-3 gap-1 transition-all duration-200 group"
            >
              Saber más
              <span class="material-icons text-sm group-hover:translate-x-1 transition-transform">arrow_forward</span>
            </a>
          </div>

        </div>
      ))}
    </div>

  </div>
</section>
