---
const industries = [
  {
    icon: 'local_shipping',
    title: 'Logística',
    description: 'Optimización de rutas, tracking en tiempo real y gestión de flotas con tecnología IoT.',
    imageSrc: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?w=800&q=80',
    imageAlt: 'Logística y Transporte',
    gradient: 'from-blue-900/80',
  },
  {
    icon: 'engineering',
    title: 'Manufactura',
    description: 'Sistemas de monitoreo, inventario y analisis en tiempo real.',
    imageSrc: 'https://images.unsplash.com/photo-1504328345606-18bbc8c9d7d1?w=800&q=80',
    imageAlt: 'Minería e Industria',
    gradient: 'from-orange-900/80',
  },
  {
    icon: 'storefront',
    title: 'Retail',
    description: 'E-commerce, integración de pagos y experiencia de cliente omnicanal.',
    imageSrc: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=800&q=80',
    imageAlt: 'Retail y E-commerce',
    gradient: 'from-purple-900/80',
  },
  {
    icon: 'account_balance',
    title: 'Fintech',
    description: 'Plataformas de pagos, core bancario y cumplimiento regulatorio digital.',
    imageSrc: 'https://images.unsplash.com/photo-1561525155-40a650192479?w=800&q=80',
    imageAlt: 'Fintech y servicios financieros',
    gradient: 'from-green-900/80',
  },
  {
    icon: 'local_hospital',
    title: 'Salud',
    description: 'Digitalización de procesos clínicos, telemedicina e historia clínica electrónica.',
    imageSrc: 'https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?w=800&q=80',
    imageAlt: 'Salud y tecnología médica',
    gradient: 'from-red-900/80',
  },
  {
    icon: 'school',
    title: 'Educación',
    description: 'Plataformas LMS, gestión académica y experiencias de aprendizaje digital.',
    imageSrc: 'https://images.unsplash.com/photo-1509062522246-3755977927d7?w=800&q=80',
    imageAlt: 'Educación y EdTech',
    gradient: 'from-indigo-900/80',
  },
];
---

<section
  class="py-24 bg-white dark:bg-surface-dark transition-colors duration-300"
  id="industrias"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

    <!-- Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-base text-primary dark:text-emerald-400 font-semibold tracking-widest uppercase mb-3">
        Industrias
      </h2>
      <p class="text-3xl sm:text-4xl font-display font-bold text-text-light dark:text-white leading-tight text-balance">
        Experiencia en sectores clave
      </p>
      <p class="mt-4 max-w-xl mx-auto text-text-muted-light dark:text-gray-400">
        Conocemos las necesidades únicas de cada industria y adaptamos nuestras soluciones para maximizar el impacto.
      </p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {industries.map((industry, i) => (
        <div
          class="stagger-item relative group rounded-2xl overflow-hidden h-72 cursor-default shadow-lg"
          style={`transition-delay: ${i * 80}ms`}
        >
          <!-- Image -->
          <img
            alt={industry.imageAlt}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale group-hover:grayscale-0"
            src={industry.imageSrc}
            loading="lazy"
            decoding="async"
          />

          <!-- Overlay gradient -->
          <div class={`absolute inset-0 bg-gradient-to-t ${industry.gradient} via-black/60 to-transparent opacity-90 group-hover:opacity-95 transition-opacity duration-300`}></div>

          <!-- Primary color accent -->
          <div class="absolute inset-0 bg-primary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300 mix-blend-overlay"></div>

          <!-- Content -->
          <div class="absolute bottom-0 left-0 p-6 w-full">
            <div class="flex items-center gap-3 mb-2">
              <div class="w-10 h-10 rounded-xl bg-primary/80 backdrop-blur-sm flex items-center justify-center group-hover:bg-primary transition-colors">
                <span class="material-icons text-white text-xl">{industry.icon}</span>
              </div>
              <h3 class="text-xl font-display font-bold text-white">{industry.title}</h3>
            </div>
            <p class="text-gray-300 text-sm leading-relaxed max-h-0 overflow-hidden group-hover:max-h-20 transition-all duration-500 ease-out">
              {industry.description}
            </p>
          </div>

          <!-- Corner accent -->
          <div class="absolute top-4 right-4 w-8 h-8 rounded-full border-2 border-white/20 opacity-0 group-hover:opacity-100 transition-all duration-300 group-hover:border-primary/60"></div>
        </div>
      ))}
    </div>

  </div>
</section>
